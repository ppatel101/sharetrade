<div class="container">
  <div class="row">
    <div class="col">
      <div class="card my-5 shadow">
        <div class="card-body">
          <% if @users.present? %>
            <h2>Listing All User</h2>
            <table class="table">
              <thead class="thead-light">
                <tr>
                  <th>Email</th>
                  <th>User Name</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <% if user.daily_updates.present? %>
                        <%= link_to user.email , admin_user_path(user) %>
                      <% else %>
                        <%= user.email %>
                      <% end %>
                    </td>
                    <td><%= user.name %></td>
                    <td>
                      <%= link_to 'Edit', edit_admin_user_path(user) ,class: "btn btn-warning" %>
                      <%= link_to 'Destroy', {:controller => "admin/users", :action => "destroy", :id => user.id}, method: :delete ,data: { confirm: "Are you sure you want to delete user?" }, class: "btn btn-primary"%>
                      <%= link_to 'Update password', passwords_edit_admin_user_path(user),class: "btn btn-warning" %>
                      <% if user.projects.present? %>
                        <%= link_to 'Assign Project', admin_user_path(user), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary'}  %>
                      <% end %>
                      <div id="modal-window" class="modal hide fade" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content"></div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <h3>No Users available</h3>
          <% end %>
          <%= link_to 'New User', new_admin_user_path ,class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>
