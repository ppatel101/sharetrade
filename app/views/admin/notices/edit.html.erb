<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <h2>Update Notification</h2>
          <%= form_for @notification, url: admin_notice_path do |f| %>

            <div class="field">
              <%= f.label :title %><br />
              <%= f.text_field :title, class: "form-control" %><br />
            </div>

            <div class="field">
              <%= f.label :description %><br>
              <%= f.rich_text_area :description, class: "form-control" %><br/>
            </div>

            <div class="actions">
              <%= f.button "Update Notification".html_safe, type: :submit, class: "btn btn-lg btn-primary btn-block", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..." } %> 
            </div><br />
          <% end %>
          <%= link_to 'Back', admin_notices_path %>
        </div>
      </div>
    </div>
  </div>
</div>
