<div class="container">
  <div class="row">
    <div class="col">
      <div class="card my-5 shadow">
        <div class="card-body">
          <h2>Detail Notification</h2>
          <% if request.path.include?('/admin/notifications') %>
            <dl class="row">
              <dt class="col-sm-2 text-warning">title :</dt>
              <dd class="col-sm-10"><%= @notification.title %></dd>
              <dt class="col-sm-2 text-warning">Description :</dt>
              <dd class="col-sm-10"><%= @notification.description %></dd>
            </dl>
            <%= link_to 'Back', admin_notifications_path %>
          <% else %>
            <dl class="row">
              <dt class="col-sm-2 text-warning">title :</dt>
              <dd class="col-sm-10"><%= @notify_user.notification.title %></dd>
              <dt class="col-sm-2 text-warning">Description :</dt>
              <dd class="col-sm-10"><%= @notify_user.notification.description %></dd>
            </dl>
            <%= link_to 'Back', notification_index_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
