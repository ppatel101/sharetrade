<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <h2>New Organization</h2>
          <%= form_for @organization, url: admin_organizations_path do |f| %>
            <div class="row">
              <div class="col">
                <div class="field">
                  <%= f.label :name %><br />
                  <%= f.text_field :name, class: "form-control",required: true %><br />
                </div>
                <div class="field">
                  <%= f.label :domain %><br />
                  <%= f.text_field :domain, class: "form-control",required: true %><br />
                </div>
              </div>
            </div>
            <div class="actions">
              <%= f.button "Create".html_safe, type: :submit, class: "btn btn-lg btn-primary btn-block",data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..." } %>
            </div><br />
            <%= link_to 'Back', admin_organizations_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>