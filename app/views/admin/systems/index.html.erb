<div class="container">
  <div class="row">
    <div class="col">
      <div class="card my-5 shadow">
        <div class="card-body">
          <% if @systems.present? %>
            <h2>Listing All System</h2>
            <table class="table">
              <thead class="thead-light">
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Purchase Date</th>
                  <th>Warranty Month</th>
                  <th>User Name</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @systems.each do |system| %>
                  <tr>
                    <td><%= system.name %></td>
                    <td><%= system.description %></td>
                    <td><%= date_format(system.purchase_date) %></td>
                    <td><%= system.warranty_month %></td>
                    <td>
                      <% if system.user.present? %>
                        <%= system.user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to 'Edit', edit_admin_system_path(system) ,class: "btn btn-warning" %>
                      <%= link_to 'Destroy', {:controller => "admin/systems", :action => "destroy", :id => system.id}, method: :delete ,data: { confirm: "Are you sure you want to delete system?" }, class: "btn btn-primary"%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <h3>No Systems available</h3>
          <% end %>
          <%= link_to 'New System', new_admin_system_path ,class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>